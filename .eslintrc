{
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
  },
  "globals": {
    "NODE_ENV": true,
    "WP_IS_DEV": true
  },
  "extends": "airbnb",
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "ecmaFeatures": {
      "impliedStrict": true,
      "jsx": true
    }
  },
  "rules": {
    "max-len": ["error", 120],
    "react/jsx-filename-extension": [1, { "extensions": [".js"] }],
    "arrow-body-style": ["error", "as-needed"]
  }
}
